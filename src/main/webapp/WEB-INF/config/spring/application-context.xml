<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="
	   	http://www.springframework.org/schema/beans
	   	http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="pdfService" class="de.sgirke.neuearbeit.service.impl.PdfServiceImpl">
		<description>Service-Klasse zum Generieren von PDF-Dokumenten</description>
	</bean>
	
	<bean id="holidayService" class="de.sgirke.neuearbeit.service.impl.HolidayServiceImpl">
		<description>Service-Klasse zum Holen aller gesetzlichen Feiertage in Th체ringen</description>
	</bean>
	
	<bean id="xmlService" class="de.sgirke.neuearbeit.service.impl.XmlServiceImpl">
		<description>Service-Klasse zum Erstellen einer XML als String-Repr채sentation</description>
	</bean>
	
	<bean id="validationService" class="de.sgirke.neuearbeit.service.impl.ValidationServiceImpl">
		<description>Service-Klasse zum Validieren der Benutzereingaben aus der View</description>
		<property name="holidayService" ref="holidayService"/>
	</bean>
	
	<bean id="workingDaysService" class="de.sgirke.neuearbeit.service.impl.WorkingDaysServiceImpl">
		<description>Service-Klasse zum Berechnen der Arbeitstage im gew채hlten Zeitraum</description>
		<property name="holidayService" ref="holidayService"/>
		<property name="xmlService" ref="xmlService"/>
	</bean>
	
	<bean id="workingDaysBean" class="de.sgirke.neuearbeit.beans.WorkingDaysBean">
		<description>JSF-Bean f체r das Arbeitstage-Modul</description>
		<property name="pdfService" ref="pdfService"/>
		<property name="validationService" ref="validationService"/>
		<property name="workingDaysService" ref="workingDaysService"/>
	</bean>
</beans>